datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}
 
model User {
  id            String          @id @default(cuid())
  email         String         @unique
  password      String
  emailVerified DateTime?
  name          String?
  surname       String?
  phone       String?
  occupation    String?
  company       String?
  company_address String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  user_id    String
  token      String
  expires    DateTime
 
  @@unique([token])
}
